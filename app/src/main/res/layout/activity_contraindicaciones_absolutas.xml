<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContraindicacionesAbsolutasActivity"
    android:background="@color/azul">

    <TextView
        android:id="@+id/textAbsolutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTRAINDICACIONES ABSOLUTAS"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/imageAbsolutas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/custom_card"
        android:backgroundTint="@color/white" />

    <ImageView
        android:id="@+id/imageCronometroAbsolutas"
        android:layout_width="80dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/cronometro"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageAbsolutas"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"/>

    <TextView
        android:id="@+id/textAbsolutas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="A. Infarto Reciente (3-5 días)
                    \nB. Angina Inestable
                    \nC. Arritmias no controladas que generen síntomas o compromiso hemodinámico
                    \nD. Síncope
                    \nE. Endocarditis, miocarditis o pericarditis aguda
                    \nF. Estenosis aórtica grave o sintomática
                    \nG. Insuficiencia cardíaca no controlada
                    \nH. Tromboembolia pulmonar o infarto pulmonar reciente
                    \nI. Trombosis de extremidades inferiores
                    \nJ. Sospecha de aneurisma disecante
                    \nK. Asma no controlada
                    \nL. Edema Pumonar
                    \nM. Insuficiencia respiratoria aguda
                    \nN. Enfermedad no cardiopulmonar aguda que pueda afectar la capacidad de ejercicio o agravarse por ejercicio (infección, tirotoxicosis, insuficiencia renal)
                    \nO. Trastorno mental que genere incapacidad para cooperar "
        android:layout_marginTop="180dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSuguienteAbsolutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#B8E0ED"
        app:srcCompat="@drawable/flecha_siguiente"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>