<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageTitle"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/bienvenida" />

    <ImageView
        android:id="@+id/imageCronometro"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/imageTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/custom_logo"
        android:elevation="2dp"
        android:padding="15dp"
        app:srcCompat="@drawable/cronometro" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/custom_card" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEmpezar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageCronometro"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/azul"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp"
        app:cornerRadius="15dp"
        android:textSize="20dp"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:text="Empezar"/>

</RelativeLayout>