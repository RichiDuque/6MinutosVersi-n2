<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContraindicacionesRelativasActivity"
    android:background="@color/azul">

    <TextView
        android:id="@+id/textRelativas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTRAINDICACIONES RELATIVAS"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/imageRelativas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/custom_card"
        android:backgroundTint="@color/white" />

    <ImageView
        android:id="@+id/imageCronometroRelativas"
        android:layout_width="80dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/cronometro"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageRelativas"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"/>

    <TextView
        android:id="@+id/textRelativas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="@string/relativas"
        android:layout_marginTop="180dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSuguienteRelativas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#B8E0ED"
        app:srcCompat="@drawable/flecha_siguiente"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>